<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/duplicate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/alert_form_upload_form" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list2"
        android:name="com.example.alertmeapp.ListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="70dp"
        app:layoutManager="LinearLayoutManager"
        tools:context=".fragments.alert.list.ListFragment"
        tools:listitem="@layout/fragment_duplicate" />

</LinearLayout>